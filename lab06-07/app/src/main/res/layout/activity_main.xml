<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.lab07.MainActivity">

    <Button
        android:id="@+id/ticTac"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="right|top|center|left"
        android:layout_marginTop="176dp"
        android:layout_marginBottom="11dp"
        android:onClick="gameList"
        android:text="Tic Tac Toe"
        app:layout_constraintBottom_toTopOf="@+id/inRow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/inRow"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="left|right|bottom|center"
        android:layout_marginBottom="112dp"
        android:onClick="gameList"
        android:text="4 in a row"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="16dp" />
</androidx.constraintlayout.widget.ConstraintLayout>